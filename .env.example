# ========================================
# Application Configuration
# ========================================
NODE_ENV=production
PORT=3000

# ========================================
# Database Configuration (MySQL)
# ========================================
# Full connection string format:
# mysql://username:password@host:port/database
DATABASE_URL=mysql://jobboard_user:jobboard_password@localhost:3306/jobboard_db

# Docker compose MySQL configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=jobboard_db
MYSQL_USER=jobboard_user
MYSQL_PASSWORD=jobboard_password
MYSQL_PORT=3306

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass

# ========================================
# JWT Authentication
# ========================================
# IMPORTANT: Change this to a strong random string in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# ========================================
# Toss Payments Integration
# ========================================
# Get your secret key from: https://developers.tosspayments.com/
TOSS_SECRET_KEY=your_toss_payments_secret_key

# ========================================
# Email Configuration
# ========================================
# Set to "true" to enable email sending (for production)
EMAIL_ENABLED=false
# SMTP server configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
# Email credentials (use app-specific password for Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# From address for sent emails
EMAIL_FROM=noreply@jobboard.com

# ========================================
# Frontend Configuration
# ========================================
FRONTEND_URL=http://localhost:3000

# ========================================
# Docker Compose Configuration
# ========================================
API_PORT=3000
